<% provide(:title, @user.name) %>
<%# display using sidebar %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <%# display avatar and name of the current user %>
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
        </section>
    </aside>
</div>